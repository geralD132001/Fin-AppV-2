<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.geraldcode.findapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icono_find_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono_find_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FindApp"
        tools:targetApi="31"
        android:testOnly="false">
        <activity
            android:name=".Controller.Objetos.ActualizarObjeto"
            android:exported="false" />
        <activity
            android:name=".Controller.Objetos.DetalleObjeto"
            android:exported="false" />
        <activity
            android:name=".Controller.Perfil.EditarImagenPerfil"
            android:exported="false" />
        <activity
            android:name=".Controller.ActualizarPassword.ActualizarPassUsuario"
            android:exported="false" />
        <activity
            android:name=".Controller.Perfil.PerfilUsuario"
            android:exported="false" />
        <activity
            android:name=".Controller.Configuration.Configuracion"
            android:exported="false" />
        <activity
            android:name=".Controller.Objetos.ListarObjetos"
            android:exported="false" />
        <activity
            android:name=".Controller.Objetos.AgregarObjeto"
            android:exported="false" />
        <activity
            android:name=".Controller.MenuPrincipal"
            android:exported="false" />
        <activity
            android:name=".Controller.Registro"
            android:exported="false" />
        <activity
            android:name=".Controller.Login"
            android:exported="false" />
        <activity
            android:name=".Controller.PantalaDeCarga"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>