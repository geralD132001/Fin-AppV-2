<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        android:layout_gravity="center"
        app:lottie_fileName="calendar_menu.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtHoyUser"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="@font/worksans"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/fechaHoyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fechaHoyUser"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="@font/worksans"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnCerrarCuadradiUser"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/btnCerrarCuadradiUser"
        android:fontFamily="@font/worksans"
        android:layout_marginTop="10dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>