<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.user.ActualizarNota">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- ID NOTA -->
        <TextView
            android:id="@+id/idNotaUpdateUser"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans"
            android:text="@string/idNotaUpdateUser"
            android:textSize="18sp" />
        <!-- UID DEL USUARIO -->
        <TextView
            android:id="@+id/uidNotaUpdateUser"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans"
            android:hint="@string/uidNotaUpdateUser"
            android:textSize="18sp" />

        <!-- CORREO DEL USUARIO -->
        <TextView
            android:id="@+id/correoNotaUpdateUser"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans"
            android:hint="@string/correoNotaUpdateUser"
            android:textSize="18sp" />

        <!-- FECHA Y HORA ACTUAL DEL DISPOSITIVO -->
        <TextView
            android:id="@+id/fechaRegistroNotaUpdateUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="@font/worksans"
            android:hint="@string/fechaRegistroNotaUpdateUser"
            android:textSize="18sp" />


        <!-- ESTADO DE LA NOTA -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tareaFinalizadaUpdateUser"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#16A085"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tareaNoFinalizadaUpdateUser"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:background="#E74C3C"
                android:visibility="gone" />

            <TextView
                android:id="@+id/estadoNotaUpdateUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/worksans"
                android:text="@string/estadoNotaUpdateUser"
                android:textSize="25sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <EditText
            android:id="@+id/tituloNotaUpdateUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans"
            android:hint="@string/tituloNotaUpdateUser"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/descripcionNotaUpdateUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/worksans"
            android:gravity="start"
            android:hint="@string/descripcionNotaUpdateUser"
            android:minHeight="150dp"
            android:textSize="20sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- BOTÃ“N PARA ABRIR CALENDARIO -->
            <Button
                android:id="@+id/btnCalendarioNotaUpdateUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnCalendarioNotaUpdateUser"
                app:icon="@drawable/icono_calendario" />

            <!-- VISUALIZAR FECHA ELEGIDA -->
            <TextView
                android:id="@+id/fechaPerdidaNotaUpdateUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/worksans"
                android:hint="@string/fechaPerdidaNotaUpdateUser"
                android:textSize="20sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp">

            <Spinner
                android:id="@+id/spinnerEstadoNotaUpdateUser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/estadoNuevoNotaUpdateUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estadoNuevoNotaUpdateUser" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>